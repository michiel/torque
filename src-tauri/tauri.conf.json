{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Torque Desktop",
  "version": "0.1.0",
  "identifier": "com.torque.desktop",
  "build": {
    "frontendDist": "frontend/model-editor/dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd frontend/model-editor && VITE_TAURI_DEV=true npm run dev",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Torque Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "additionalBrowserArgs": "--enable-logging --log-level=0"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' torque: 127.0.0.1:* localhost:*; script-src 'self' 'unsafe-inline' 'unsafe-eval' torque:; connect-src 'self' torque: ws://127.0.0.1:* ws://localhost:* http://127.0.0.1:* http://localhost:*; img-src 'self' data: torque:; style-src 'self' 'unsafe-inline' torque:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      {
        "target": "dmg",
        "platforms": ["macOS"]
      },
      {
        "target": "msi",
        "platforms": ["windows"]
      },
      {
        "target": "deb",
        "platforms": ["linux"]
      },
      {
        "target": "rpm",
        "platforms": ["linux"]
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "dmg": {
      "appPosition": {
        "x": 180,
        "y": 170
      },
      "applicationFolderPosition": {
        "x": 480,
        "y": 170
      },
      "window": {
        "width": 660,
        "height": 400
      }
    },
    "windows": {
      "msi": {
        "language": "en-US",
        "productName": "Torque Desktop",
        "manufacturerName": "Torque Contributors",
        "upgradeCode": "E7F10B2B-1F3C-4E4F-8A6E-2F8A3D9C5E7F"
      }
    }
  }
}
