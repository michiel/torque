{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Torque Desktop",
  "version": "0.1.0",
  "identifier": "com.torque.desktop",
  "build": {
    "frontendDist": "../frontend/model-editor/dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "cd /home/michiel/dev/torque/frontend/tauri && npm run dev",
    "beforeBuildCommand": "cd /home/michiel/dev/torque/frontend/model-editor && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Torque Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' torque:; script-src 'self' 'unsafe-inline' 'unsafe-eval' torque:; connect-src 'self' torque:; img-src 'self' data: torque:; style-src 'self' 'unsafe-inline' torque:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
