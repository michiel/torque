{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Torque Desktop",
  "version": "0.1.0",
  "identifier": "com.torque.desktop",
  "build": {
    "frontendDist": "../frontend/tauri/dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "cd /home/michiel/dev/torque/frontend/tauri && npm run dev",
    "beforeBuildCommand": "cd /home/michiel/dev/torque/frontend/tauri && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Torque Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
